<h1>Admin Dashboard</h1>

<div class="stats">
  <h3>İstatistikler</h3>
  <p>Toplam Kullanıcı: <%= User.count %></p>
  <p>Toplam Hata Bildirimi: <%= ErrorReport.count %></p>
  <p>Çözülmemiş Hatalar: <%= ErrorReport.where(resolved: false).count %></p>
</div>

<div class="user-management">
  <h3>Kullanıcı Yönetimi</h3>
  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th>Rol</th>
        <th>İşlemler</th>
      </tr>
    </thead>
    <tbody>
      <% User.all.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td>
            <%= form_for [:admin, user] do |f| %>
              <%= f.select :role, User.roles.keys %>
              <%= f.submit 'Güncelle' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div> 