<div class="auth-container">
  <div class="auth-box">
    <h2>Hoş Geldiniz</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <div class="form-group">
        <%= f.label :email, "E-posta Adresiniz" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "ornek@email.com" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Şifreniz" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "••••••" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "Beni Hatırla" %>
        </div>
      <% end %>

      <%= f.submit "Giriş Yap", class: "btn btn-primary" %>
    <% end %>

    <div class="auth-links">
      <%= link_to "Şifremi Unuttum", new_password_path(resource_name) %>
      <%= link_to "Yeni Hesap Oluştur", new_registration_path(resource_name) %>
    </div>
  </div>
</div>
