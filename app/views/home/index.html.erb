<div class="container">
  <h1>Hoş Geldiniz</h1>
  
  <% if user_signed_in? %>
    <div class="user-info">
      <p>Merhaba, <%= current_user.email %></p>
      <p>Rol: <%= current_user.role %></p>
      
      <%= button_to 'Çıkış Yap', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
      
      <% if current_user.admin? %>
        <%= link_to 'Admin Paneli', admin_dashboard_path, class: 'btn btn-primary' %>
      <% end %>
    </div>
  <% else %>
    <div class="auth-links">
      <%= link_to 'Giriş Yap', new_user_session_path, class: 'btn btn-primary' %>
      <%= link_to 'Kayıt Ol', new_user_registration_path, class: 'btn btn-success' %>
    </div>
  <% end %>
</div> 